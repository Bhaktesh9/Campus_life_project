{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", {"argsIgnorePattern": "^_"}],
    "no-console": ["warn", {"allow": ["warn","error"]}],
    "semi": ["warn", "always"]
  }
}
